Test-Scenario-1:
  id: ts_01
  path: tests/hydratk/lib/network/term/test_client.jedi
  name: test_client
  desc: Unit tests for module hydratk/lib/network/term/client.py
  author: Petr Rasek <bowman@hydratk.org>
  version: 1.0
  
  pre-req: |
    import hydratk.lib.network.term.client as term
    
  Test-Case-1:
    id: tc_01
    name: term_client
    desc: Tests for method TermClient
  
    Test-Condition-1: 
      id: tco_01
      name: ssh_client
      desc: Create SSH client instance
      test: |
        protocol = 'SSH'        
        client = term.TermClient(protocol) 
                         
      validate: |  
        current = '{0}.{1}'.format(client.__module__, client.__class__.__name__)
        expected = 'hydratk.lib.network.term.ssh_client.TermClient'
        this.test_result = (current == expected)
        assert (this.test_result == True), 'expected: {0}, current: {1}'.format(current, expected)   
        
    Test-Condition-2: 
      id: tco_02
      name: default_client
      desc: Create default client instance
      test: |      
        client = term.TermClient() 
                         
      validate: |  
        current = '{0}.{1}'.format(client.__module__, client.__class__.__name__)
        expected = 'hydratk.lib.network.term.ssh_client.TermClient'
        this.test_result = (current == expected)
        assert (this.test_result == True), 'expected: {0}, current: {1}'.format(current, expected)      
        
    Test-Condition-3: 
      id: tco_03
      name: unknown_client
      desc: Create unknown client
      test: |      
        try:
            protocol = 'XXX'
            client = term.TermClient(protocol) 
            result = False
        except ValueError:    
            result = True
                         
      validate: |  
        this.test_result = (result == True)
        assert (this.test_result == True), 'expected ValueError'                     